					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/messages?group_id=1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"messages"
							],
							"query": [
								{
									"key": "group_id",
									"value": "1"
								}
							]
						},
						"description": "Get all messages filtered by group_id"
					},
					"response": []
				},
				{
