	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/healthcheck",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"healthcheck"
					]
				},
				"description": "Check the health status of the API"
			},
			"response": []
		},
		{
			"name": "Messages",
			"item": [
				{
					"name": "Create Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"user\": \"Alice\",\n    \"content\": \"Hello, SRE Bootcamp!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/messages",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"messages"
							]
						},
						"description": "Create a new message in the default SRE Bootcamp group"
					},
					"response": []
				},
				{
					"name": "Get All Messages",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/messages",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"messages"
							]
						},
						"description": "Get all messages from all groups"
					},
					"response": []
				},
				{
